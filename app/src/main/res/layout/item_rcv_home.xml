<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_weight="1"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:background="@drawable/bg_item_home">
    <ImageView
        android:id="@+id/img"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/meo"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/onest_medium"
        android:textColor="#EEF1F6"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@drawable/bg_btn_item_home"
        android:textSize="14sp"
        tools:text="dành cho trẻ emssssssssssssssssssssssssss"/>
</LinearLayout>